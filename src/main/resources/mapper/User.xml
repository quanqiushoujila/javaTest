<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test.mapper.UserMapper">
    <update id="update">
        update sys_user
        <set>
            <if test="username != null and username.trim() != ''">
                username = #{username},
            </if>
            <if test="nickname != null and nickname.trim() != ''">
                nickname = #{nickname},
            </if>
            <if test="email != null and email.trim() != ''">
                email = #{email},
            </if>
            <if test="phone != null and phone.trim() != ''">
                phone = #{phone},
            </if>
            <if test="address != null and address.trim() != ''">
                address = #{address}
            </if>
        </set>
        where id = #{id}
    </update>
    <insert id="insert">
        insert into
            sys_user
        set
        <if test="username != null and username.trim() != ''">
            username = #{username},
        </if>
        <if test="password != null and password.trim() != ''">
            password = #{password},
        </if>
        <if test="nickname != null and nickname.trim() != ''">
            nickname = #{nickname},
        </if>
        <if test="email != null and email.trim() != ''">
            email = #{email},
        </if>
        <if test="phone != null and phone.trim() != ''">
            phone = #{phone},
        </if>
        <if test="address != null and address.trim() != ''">
            address = #{address}
        </if>
    </insert>

    <select id="findAll" resultType="com.example.test.entity.User">
        select * from sys_user
    </select>
    <select id="getById" resultType="com.example.test.entity.User">
        select * from sys_user where id = #{id}
    </select>
    <select id="getPage" resultType="com.example.test.entity.User">
        select * from sys_user limit #{page}, #{limit}
    </select>
    <select id="selectTotal" resultType="java.lang.Integer">
        select count(*) from sys_user
    </select>
    <delete id="deleteById">
        delete from sys_user where id = #{id}
    </delete>
</mapper>
